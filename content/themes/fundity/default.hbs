<!DOCTYPE html>
<html class="no-js">
<head>
    <title>{{meta_title}}</title>
    <meta charset="utf-8" />
    <meta name="description" content="{{meta_description}}" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {{! Add to homescreen for Chrome on Android }}
    <meta name="mobile-web-app-capable" content="yes">

    {{! favicon.ico and apple-touch-icon(s) }}
    <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

    {{! Robots and Viewport }}
    <meta name="robots" content="index, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- build:css /assets/css/vendor.css -->
    <link rel="stylesheet" href="{{asset "/bower_components/normalize-css/normalize.css"}}">
    <link rel="stylesheet" href="{{asset "/bower_components/font-awesome/css/font-awesome.min.css"}}">
    <link rel="stylesheet" href="{{asset "/bower_components/animate.css/animate.min.css"}}">
    {{! Place all vendor stylesheets and/or front-end frameworks here }}
    <!-- endbuild -->
    <!-- build:css /assets/css/app.css -->
    <link rel="stylesheet" href="{{asset "css/app.css"}}">
    <!-- endbuild -->

    <!-- build:js /assets/js/modernizr.js -->
    <script src="{{asset "/bower_components/modernizr/modernizr.js"}}"></script>
    <!-- endbuild -->

    {{! Page-Specific Metadata }}
    {{{block "meta"}}}

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">

{{> 'navbar' }}

{{! Everything else gets inserted here }}
<div class="main">
    {{{body}}}
</div>

{{> 'footer' }}

{{! Ghost outputs important scripts and data with this tag }}
{{ghost_foot}}

<!-- build:js /assets/js/scripts.js -->
{{! Place all scripts to be included in the footer here }}
<script type="text/javascript" src="{{asset "js/app.js"}}"></script>
<!-- endbuild -->

<!-- build:remove -->
<script type="text/javascript" src="http://localhost:35729/livereload.js"></script>
<!-- endbuild -->

{{! Google Analytics }}
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-51161192-5', 'auto');
    ga('send', 'pageview');
</script>

</body>
</html>
